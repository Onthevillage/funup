<%= render "layouts/header" %>
<div class='message-index-foundation'>
    <div class='main-block'>
        <div class='main-left-block'>
            <div class='left-upper-block'>
                <%= current_fun.last_name %> <%= current_fun.first_name %>
            </div>
            <div class='left-under-block'>
                <% @funs.each do |fun| %>
                    <%= fun.last_name %> <%= fun.first_name %>
                <% end %>

                <% @value_creaters.each do |creater| %>
                    <div class='message-creater-img'>
                        <%= image_tag creater.image, class: "creater-img" %>
                    </div>

                    <h3 class='message-creater-name'>
                        <%= creater.fun.last_name %> <%= creater.fun.first_name %>
                    </h3>
                <% end %>
            </div>
        <div>
        <div class='main-right-block'>
            <div class='right-upper-block'>
            相手ユーザーネーム
            <div>
            <div class='right-under-block'>
            <div>    
        <div>
    </div>
</div>