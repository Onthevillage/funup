<div class='registrations'>
  <div class='center-block'>
    <div class='center-white-block'>
      <div class='registration-image'>
        <%= link_to image_tag("funup.png", class:"funup-logo-registration"), "/" %>
      </div>

      <div class='contents'>
          <h1>登録してfunを増やそう</h1>

        <%= form_with model: @fun, url: fun_registration_path, id: 'new_fun', class: 'new_fun', local: true do |f| %>
          <%#<%= render "devise/shared/error_messages", resource: resource %>


          <div class='input-name-wrap'>
            <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"姓" %>
          </div>  

          <div class='input-name-wrap'>
            <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"名" %>
          </div>  

          <div class="field">
            <%= f.email_field :email, placeholder:"メールアドレス" %>
          </div>

          <div class="field">
            <%= f.password_field :password, placeholder:"パスワード", autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder:"確認用パスワード", autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"fun-gender"}) %>
          </div>

          <div class='input-birth-wrap'>
            <%= raw sprintf(
            f.date_select(:birth_date,class:'select-birth',id:"birth-date",use_month_numbers: true,prompt:'--',start_year: 1930,end_year: (Time.now.year - 5),date_separator: '%s')," 年 ", " 月 ") + " 日 " %>
          </div>

          <div class="actions">
            <%= f.submit "登録する" %>
          </div>
        <% end %>

      </div>
    </div> 
  </div>
  <div class='under-block'>
    <div class='link-signin'>
     アカウントをお持ちですか？<%=link_to 'ログインする', new_fun_session_path, class:"link-login-btn" %>
    </div>
  </div>
</div>
